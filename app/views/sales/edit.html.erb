<h1 class="center"><%= @sale.date %>/<%= @sale.time %>時 </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @sale do |f| %>
      <%= f.label :price, "単価" %>
      <%= f.number_field :price, class: 'form-control', id: "price" %>

      <%= f.label :transactions, "件数" %>
      <%= f.number_field :transactions, class: 'form-control', id: "transactions" %>

      <%= f.label :total, "時間帯別売上" %>
      <%= f.number_field :total, class: 'form-control', id: "total" %>

      <%= f.submit "確定", class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'ホーム', root_path %>
    <script>
      $('#transactions').change(function() {
        var s = $('#price').val();
        var a = $('#transactions').val();
        var si = parseInt(s);
        var sa = parseInt(a);

        var total = si * sa

        $('#total').val(total)
      });
    </script>
  </div>
</div>
