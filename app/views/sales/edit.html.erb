<h1 class="center"><%= @sale.date %>/<%= @sale.time %>時 </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @sale do |f| %>
      <%= f.label :price, "単価" %>
      <%= f.number_field :price, class: 'form-control' %>

      <%= f.label :transactions, "件数" %>
      <%= f.number_field :transactions, class: 'form-control' %>

      <%= f.submit "確定", class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'ホーム', root_path %>
  </div>
</div>
