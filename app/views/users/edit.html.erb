<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= @user.name %></h2>
    <%= form_with(model: @user, local: true) do |f| %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "変更", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>