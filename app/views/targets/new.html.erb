<h1 class="center"><%= Date.today %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @target do |f| %>
      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control', value: Date.today %>

      <%= f.label :time %>
      <%= f.number_field :time, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control' %>

      <%= f.label :transactions %>
      <%= f.number_field :transactions, class: 'form-control' %>

      <%= f.submit "確定", class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'ホーム', root_path %>
  </div>
</div>